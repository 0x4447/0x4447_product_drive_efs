{
	"BackupRole": {
		"Type": "AWS::IAM::Role",
		"Properties": {
			"RoleName": "backup",
			"AssumeRolePolicyDocument": {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Principal": {
							"Service": "backup.amazonaws.com"
						},
						"Action": "sts:AssumeRole"
					}
				]
			},
			"ManagedPolicyArns": [
				"arn:aws:iam::aws:policy/aws-service-role/AWSBackupServiceLinkedRolePolicyForBackup"
			]
		}
	}
}
